{
  "languages": {
    "Python": {
      "language_servers": [
        "basedpyright",
        "ruff"
      ],
      "format_on_save": "on",
      "formatter": [
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    }
  },
  "lsp": {
    "basedpyright": {
      "binary": {
        "path": ".venv/bin/basedpyright-langserver",
        "arguments": ["--stdio"]
      }
    }
  },
  "auto_install_extensions": {
    "ruff": true
  }
}
