{
  "languages": {
    "Python": {
      "language_servers": [
        "basedpyright",
        "ruff"
      ],
      "format_on_save": "on",
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": true,
            "source.fixAll.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]        
    }
  }, 
  "auto_install_extensions": {
    "ruff": true
  }
}
